{
    "compilerOptions": {
      "outDir": "dist",
      "lib": ["ESNext", "DOM"],
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true,      
      "module": "node16", 
      "strict": true,
      "skipDefaultLibCheck": true,
      "moduleResolution": "node16",
      "experimentalDecorators": true,
      "rootDir": "packages/core/src",
    },
    "include": ["packages/core/src"],
    "exclude": ["**/node_nodules", "dist"]
}